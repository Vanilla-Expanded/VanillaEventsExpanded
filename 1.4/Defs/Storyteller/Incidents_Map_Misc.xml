    </targetTags>
    <workerClass>IncidentWorker_MakeGameCondition</workerClass>
    <gameCondition>Drought</gameCondition>
    <letterLabel>Drought</letterLabel>
    <letterText>An unusual drought has set in.\n\nDrought is devastating for plant life and will quickly prevent all the crops not planted in hydroponics or high fertility soil to grow.</letterText>
    <letterDef>NegativeEvent</letterDef>
    <baseChance>0.15</baseChance>
    <minRefireDays>40</minRefireDays>
    <durationDays>
      <min>6</min>
      <max>10</max>
    </durationDays>
  </IncidentDef>

